{
  "name": "ask-kit",
  "version": "0.0.7",
  "description": "A comprehensive gamification engine for Telegram mini-apps that enables rapid development of engaging social applications.",
  "type": "module",
  "main": "./dist/ask-kit.umd.cjs",
  "module": "./dist/ask-kit.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ask-kit.js",
      "require": "./dist/ask-kit.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "docs"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"examples/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\" \"examples/**/*.{ts,js}\"",
    "type-check": "tsc --noEmit",
    "update-version": "node scripts/update-version.cjs",
    "preversion": "npm run lint:check && npm run type-check && npm run test",
    "postversion": "npm run update-version && npm run build && git add src/index.ts && git commit --amend --no-edit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run lint:check && npm run type-check && npm run test && npm run build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "^14.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "keywords": [
    "telegram",
    "mini-app",
    "gamification",
    "social",
    "kit",
    "modules",
    "typescript"
  ],
  "author": {
    "name": "Grigorii Sharapov",
    "email": "socaseinpoint@gmail.com",
    "url": "https://github.com/socaseinpoint"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/socaseinpoint/ask-kit.git"
  },
  "homepage": "https://github.com/socaseinpoint/ask-kit#readme",
  "bugs": {
    "url": "https://github.com/socaseinpoint/ask-kit/issues"
  }
}
